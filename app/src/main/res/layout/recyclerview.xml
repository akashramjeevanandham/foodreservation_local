<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/card"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parent1">

        <TextView
            android:id="@+id/foodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/alfa_slab_one"
            android:text="DOSAI"
            android:textAlignment="center"
            android:textColor="#7558A8"
            android:textSize="15dp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/image"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_below="@+id/foodName"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/quantityTXT"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="QUANTITY"
            android:textAlignment="center"
            android:textColor="#B00BCC"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/foodName"
            />
        <TextView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_below="@+id/quantityTXT"
            android:id="@+id/quantityval"
            android:layout_toRightOf="@+id/btnadd"
            android:layout_marginTop="7dp"
            android:textAlignment="center"
            android:hint="0"/>
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:text="short"
            android:visibility="visible"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/shortdesc"

            />
       <ImageView
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_below="@+id/quantityTXT"
           android:src="@drawable/minus"
           android:layout_toRightOf="@+id/image"
           android:layout_marginLeft="22dp"
           android:id="@id/btnadd"
           android:background="?attr/selectableItemBackgroundBorderless"
           android:clickable="true"
           />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/quantityTXT"
            android:layout_toRightOf="@+id/quantityval"
            android:layout_marginRight="20dp"
            android:src="@drawable/plus"
            android:id="@+id/btnadd1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/image"
            android:layout_below="@+id/btnadd1"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/addtocart"
            android:id="@+id/addcartbtn"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_down_arrow"
            android:layout_below="@+id/shortdesc"
           android:layout_alignParentEnd="true"
            android:id="@+id/downarrow"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parent1"
        android:visibility="gone"
        android:id="@+id/parent2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="long"
            android:visibility="visible"
            android:layout_marginTop="5dp"
            android:id="@+id/longdesc"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_up_arrow"
            android:layout_below="@id/longdesc"
            android:id="@+id/uparrow"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:visibility="visible"/>

    </RelativeLayout>

</RelativeLayout>

</androidx.cardview.widget.CardView>